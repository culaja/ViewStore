        <IsPackable>true</IsPackable>
        <AssemblyName>ViewStore.Prometheus</AssemblyName>
        <PackageId>ViewStore.Prometheus</PackageId>
        <PackageDescription>Prometheus metrics for View Store Cache implementation.</PackageDescription>
